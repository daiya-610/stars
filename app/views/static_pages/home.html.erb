<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>投稿</h3>
      <%= render 'shared/comment' %>
    </div>
  </div>
<% else %>  <div class="center jumbotron">
    <%= image_tag 'logo.png', :size => '450x300' %>
  </div>
  <h1 class="text-center">ようこそstarsへ</h1>
  <div class="col text-center">
    <%= link_to "新規登録", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <% end %>